doctype html
html(lang="en")
    head
        meta(charset="UTF-8")
        meta(http-equiv="X-UA-Compatible", content="IE=edge")
        meta(name="viewport", content="width=device-width, initial-scale=1.0")
        link(href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC" crossorigin="anonymous")
        title Form
    body( class="container-fluid bg-secondary h-100 d-flex flex-column justify-content-evenly align-items-center") 

        div( class="container-fluid bg-secondary h-100 d-flex flex-column justify-content-evenly align-items-center")

            h1(class="text-white") !{saludo} 

            a(class="btn btn-primary " style="text-decoration: none; color: white;" href="/products") Lista de productos

            form(id="form")
                div(class="mb-4")
                    label(for="title",class="text-white form-label color") Nombre del producto
                    input(type="text", class="bg-dark text-white form-control", name="title" ,id="title", required)
            
                div(class="mb-4")
                    label(for="picture", class="text-white form-label") Imagen
                    input( type="file", class="bg-dark text-white form-control", id="picture", name="picture", required)
            
                div(class="mb-4")
                    label(for="price", class="text-white form-label") Precio
                    input(type="number", class="bg-dark text-white form-control", id="price", name="price", required)
            
                button(type="submit", class="text-white btn btn-primary") Submit
  

        script(src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/js/bootstrap.bundle.min.js" integrity="sha384-MrcW6ZMFYlzcLA8Nl+NtUVF0sA7MsXsP1UyJoMp4YLEuNSfAP+JcXn/tWtIaxVXM" crossorigin="anonymous")
        script(src="js/newProduct.js")
