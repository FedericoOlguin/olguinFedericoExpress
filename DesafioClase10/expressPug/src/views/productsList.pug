doctype html
html(lang="en")
    head
        meta(charset="UTF-8")
        meta(http-equiv="X-UA-Compatible", content="IE=edge")
        meta(name="viewport", content="width=device-width, initial-scale=1.0")
        link(href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC" crossorigin="anonymous")
        title List
    body 

        div(style="min-height: 100vh;" class="container-fluid bg-secondary h-auto d-flex flex-column justify-content-evenly align-items-center")
            a(class="btn btn-primary m-5" style="text-decoration: none; color: white;" href="/") Cargar productos
            if hasProducts
                h1 No se encontraron productos
            else
                table(class="table table-dark  table-striped w-75 ")
                    thead
                        tr
                            th(scope="col") Producto
                            th(scope="col") Precio
                            th(scope="col") Imagen


                    tbody
                        each product in products
                            tr(style="min-height: 5000000px;")
                                td(class="w-50") !{product.title}
                                td(class="w-25") !{product.price}
                                td(class="w-100  d-flex flex-row justify-content-end")
                                    img(src=`http://localhost:8080/img/${product.thumbnail}` alt="prodImage" class="img-fluid w-100 bg-transparent ")

                    





        script(src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/js/bootstrap.bundle.min.js" integrity="sha384-MrcW6ZMFYlzcLA8Nl+NtUVF0sA7MsXsP1UyJoMp4YLEuNSfAP+JcXn/tWtIaxVXM" crossorigin="anonymous")
